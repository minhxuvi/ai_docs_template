{
    "name": "xuvi",
    "displayName": "Xuvi",
    "description": "A VS Code extension that uses Ollama to generate text based on prompts",
    "version": "1.0.0",
    "publisher": "xuvi",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other",
        "Machine Learning"
    ],
    "activationEvents": [
        "onCommand:xuvi.generateText"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "xuvi.generateText",
                "title": "Generate Text with Ollama",
                "category": "Xuvi"
            }
        ],
        "menus": {
            "command-palette": [
                {
                    "command": "xuvi.generateText"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "ollama": "^0.5.0"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "18.x",
        "@types/mocha": "^10.0.1",
        "@types/glob": "^8.1.0",
        "@vscode/test-electron": "^2.3.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.0.0"
    }
}